<view class="container">

	<view class="header">
		<view class="publish-container" bind:tap="onPublish">
			<i class="iconfont icon-fabu"></i>
		</view>
		<view class="search-container">
			<x-search iconfont="iconfont" icon-sousuo="icon-sousuo" />
		</view>
	</view>

	<view class="blog-list">
		<block wx:for="{{blogList}}" wx:key="_id">
		<view class="blog-panel">
				<x-blog-card blog="{{item}}" data-blogid="{{item._id}}" />
        <x-blog-ctrl blogId="{{item._id}}" iconfont="iconfont" icon-pinglun="icon-pinglun" icon-fenxiang="icon-fenxiang" />
		</view>
	</block>
	</view>


	<x-login modalShow="{{modalShow}}" bind:loginsuccess="onLoginSuccess" bind:loginfail="onLoginFail">

	</x-login>
</view>